{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel Artiste{% endblock %}

{% block body %}
    <h1>Créer un nouvel Artiste</h1>

    {{ form_start(ArtistForm) }}
    {{ form_row(ArtistForm.name) }}
    {{ form_row(ArtistForm.description) }}
    {{ form_row(ArtistForm.image) }}
    <button type="submit" class="btn btn-primary">Créer</button>
    {{ form_end(ArtistForm) }}
    {{ form_errors(ArtistForm) }}
{% endblock %}