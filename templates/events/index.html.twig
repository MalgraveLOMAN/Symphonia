{% extends 'base.html.twig' %}

{% block title %}Liste des Events - Symphonia{% endblock %}

{% block body %}
    <div>
        <h1>Liste des Events</h1>

        <form method="GET" action="">
            <label>Rechercher un event</label>
            <input type="date" name="date">
            <input type="submit" value="Rechercher">
        </form>


        {% include 'partials/_new_event.html.twig' %}
        {% if events is empty %}
            <p>Aucun Event trouv√©.</p>
        {% else %}
            <ul>
                {% for event in events %}
                    <a href="{{ path('app_event_details', {'id': event.id}) }}">{{ event.name }}</a>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}